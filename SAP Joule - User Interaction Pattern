graph LR
    subgraph User_Layer [User Interaction]
        A["'What is our company travel policy?'/ 'Show me SAP's guidelines for creaging a custom Integration Flow'"] -- "Natural Language" --> B((Joule AI))
    end

    subgraph Intelligence_Layer [Processing]
        B -- "Search Intent" --> C{SAP Document Grounding}
    end

    subgraph Knowledge_Sources [Data Repositories]
        C -- "External" --> D[SAP Help Pages]
        C -- "Internal" --> E[Customer-Owned Content]
    end

    D -. "Verified Info" .-> C
    E -. "Private Docs" .-> C
    C -- "Grounded Answer" --> B
    B -- "Knowledge Result" --> A

    %% Styling for professional look
    style B fill:#0070f2,stroke:#fff,stroke-width:2px,color:#fff
    style C fill:#e5f1ff,stroke:#0070f2,stroke-dasharray: 5 5
    style E fill:#fff9c4,stroke:#fbc02d
    style D fill:#e1f5fe,stroke:#01579b
